{
	"private": true,
	"name": "server",
	"version": "0.1.0",
	"main": "dist/index.js",
	"engines": {
		"node": "16.x",
		"npm": "7.x"
	},
	"scripts": {
		"gen-env": "gen-env-types .env -o src/@types/env.d.ts -e .",
		"build": "tsc -p tsconfig.build.json",
		"server": "nodemon --ignore node_modules --ext .ts,.json --exec ts-node ./src/index",
		"web": "SET BROWSER=none && npm start --prefix web",
		"dev": "concurrently \"npm run server\" \"npm run web\"",
		"heroku:prebuild": "if exist dist rd dist"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/http-proxy-middleware": "^1.0.0",
		"@types/morgan": "^1.9.3",
		"concurrently": "^6.2.1",
		"gen-env-types": "^1.3.0",
		"http-proxy-middleware": "^2.0.1",
		"nodemon": "^2.0.12",
		"ts-node": "^10.2.1",
		"typescript": "^4.4.2"
	},
	"dependencies": {
		"apollo-graphql": "^0.9.3",
		"apollo-server": "^2.25.1",
		"apollo-server-express": "^2.25.1",
		"cors": "^2.8.5",
		"dotenv-safe": "^8.2.0",
		"express": "^4.17.1",
		"morgan": "^1.10.0"
	}
}
